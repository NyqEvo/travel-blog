<div class="col col-md">
  <div class="row">
    <div class="col-lg-6">{{> calendar-jung}}</div>
    <div class="col-lg-6">Notes
      <div id="photo-dump">Photos
        <img
          src="/images/{{post.img}}"
          class="img-thumbnail"
          alt="place holder"
        />

        {{! Cloudinary }}

        <form id="upload-form">
          <input id="file-field" type="file" />
          <button>Upload</button>
        </form>
      </div>
    </div>
  </div>

  <div>
    <div>
      <div class="col col-md">
        <p>{{post.location}}: {{post.user.name}}</p>
        <p>{{post.description}}</p>
      </div>
      <div class="col col-md">
        {{#each post.comments as |comment|}}
         <p>{{comment.user.name}}: {{comment.info}}</p>
        {{/each}}
        <div class="input-group">
          <textarea
            class="form-control"
            id="info"
            rows="2"
            name="comment.info"
          ></textarea>
          <div class="dropdown">
            <button
              class="btn btn-danger dropdown-toggle"
              type="button"
              id="dropdownMenu2"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Tags
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
              <li><button
                  class="dropdown-item"
                  type="button"
                >Accommodations</button></li>
              <li><button
                  class="dropdown-item"
                  type="button"
                >Food/Drink</button></li>
              <li><button
                  class="dropdown-item"
                  type="button"
                >Transportation</button></li>
              <li><button
                  class="dropdown-item"
                  type="button"
                >Entertainment</button></li>
            </ul>
          </div>
        </div>
        <div>
          <button
            id="createCommentBtn"
            class="btn btn-sm btn-primary"
            data-id="{{post.id}}"
          >Comment</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/comments.js"></script>